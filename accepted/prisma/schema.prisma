// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  fname String
  lname String
  email String
  password String
  universityCode Int
  profileImage Bytes?
  joinDate DateTime @default(now())
  educationConsultant EducationConsultant?
  student Student?
}

model EducationConsultant {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int


}

model Student {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model University {
  id Int @id @default(autoincrement())
  name String
}

model Task {
  id Int @id @default(autoincrement())
  documentName String
  assignedDate DateTime
  dueDate DateTime
  Status TaskStatus
  Description String
}
enum TaskStatus {
  NOTSTARTED
  INPROGRESS
  COMPLETE
}